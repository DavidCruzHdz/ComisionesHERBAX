@model IEnumerable<Comisiones.Models.CO_st_BuscaISRs2_Result>

@{
	ViewBag.Title = "Listado Impuestos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="maintitle">Listado de Configuracion de Impuestos</div>

<div class="container-fluid" id="divMainContainer">
	@Html.AntiForgeryToken()
	<p>
		@Html.ActionLink("Agregar nueva", "Create", "CO_Tb_ISR_GT", null, new { @class = "btn btn-default btn-lg", @style = "display:inline" })
		@Html.AntiForgeryToken()
	</p>


	<script type="text/javascript" class="init">
		$(document).ready(function () {
			var table = $('#tblIVA').DataTable({

				language: {
					"decimal": "",
					"emptyTable": "No hay información",
					"info": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
					"infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
					"infoFiltered": "(Filtrado de _MAX_ total entradas)",
					"infoPostFix": "",
					"thousands": ",",
					"lengthMenu": "Mostrar _MENU_ registros",
					"loadingRecords": "Cargando...",
					"processing": "Procesando...",
					"search": "Buscar:",
					"zeroRecords": "Ningún dato disponible en esta tabla",
					"paginate": {
						"first": "Primero",
						"last": "Ultimo",
						"next": "Siguiente",
						"previous": "Anterior"
					}
				}
			}
			);


		});
	</script>


	<div class="col-lg-12" id="divPageQueryLists">
		<table id="tblIVA" class="table display table-striped table-bordered dt-responsive nowrap" style="width:100%; text-align:right;">
			<thead>
				<tr>
					@*<th>
						@Html.DisplayNameFor(model => model.id_pais)
					</th>*@
					<th>
						@Html.DisplayNameFor(model => model.pais)
					</th>
					@*<th>
						@Html.DisplayNameFor(model => model.id_regimen)
					</th>*@
					<th>
						@Html.DisplayNameFor(model => model.descripcion)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.montominimo)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.limiteinferior)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.limitesuperior)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ISR)
					</th>
					@*<th>
			@Html.DisplayNameFor(model => model.fecha_ult_modificacion)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.usuario_ult_modificacion)
		</th>*@
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
				<tr>
					@Html.HiddenFor(modelItem => item.id_pais)
					@Html.HiddenFor(modelItem => item.id_regimen)
					<td>
						@Html.DisplayFor(modelItem => item.pais)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.descripcion)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.montominimo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.limiteinferior)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.limitesuperior)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ISR)
					</td>
					@*<td>
			@Html.DisplayFor(modelItem => item.fecha_ult_modificacion)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.usuario_ult_modificacion)
		</td>*@
					<td>
						@Html.ActionLink("Modificar", "Edit", new { id = item.id_ISR }) |
						@Html.ActionLink("Consultar", "Details", new { id = item.id_ISR }) |
						@Html.ActionLink("Borrar", "Delete", new { id = item.id_ISR })
					</td>
				</tr>
				}
		</table>
	</div>
</div>



