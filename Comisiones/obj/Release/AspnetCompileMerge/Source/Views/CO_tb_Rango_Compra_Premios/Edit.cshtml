@model Comisiones.Models.CO_tb_Rango_Compra_Premios

@{
    ViewBag.Title = "Modificaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

	<div class="col-md-12 jumbotron" style="color:#000000; font:caption; background-color:azure;">
		@Html.AntiForgeryToken()
		<h2>Modificar Rank de Premios</h2>

		@using (Html.BeginForm("Productos", "CO_tb_Rango_Compra_Premios", FormMethod.Get))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<form id="myform" class="form-inline">

				<div class="form-horizontal">

					@*@using (Html.BeginForm("Edit", "CO_tb_Rango_Compra_Premios", FormMethod.Get))*@

					<div class="form-group">
						@Html.LabelFor(model => model.id_premio, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.DropDownList("id_premio", (IEnumerable<SelectListItem>)ViewBag.dropdownPremios, "Selecciona un Premio?", new { onchange = "this.form.submit();", @id = "IdPremio", @class = "form-control" })
						</div>
					</div>


					<br />

					<div class="form-group">
						@Html.LabelFor(model => model.id_pais, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.DropDownList("id_pais", (IEnumerable<SelectListItem>)ViewBag.dropdownPaises, "Selecciona un Pais?", new { @id = "IdPais", @class = "form-control" })
						</div>
					</div>

					<br />
					<div class="form-group">
						@Html.LabelFor(model => model.id_periodo, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.DropDownList("id_periodo", (IEnumerable<SelectListItem>)ViewBag.dropdownPeriodos, "Cual es Periodo a configurar?", new { @id = "IdPeriodo", @class = "form-control" })
						</div>
					</div>

					<br />
					<div class="form-group">
						@Html.LabelFor(model => model.id_rank, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.DropDownList("id_rank", (IEnumerable<SelectListItem>)ViewBag.dropdownRanks, "Cual es RANK a configurar?", new { @id = "IdRank", @class = "form-control" })
						</div>
					</div>

					<br />
					<div class="form-group">
						@Html.LabelFor(model => model.puntos, htmlAttributes: new { @class = "control-label col-md-2" })						
						<div class="col-md-10">
							@Html.EditorFor(model => model.puntos, new {@id = "Puntos", htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.puntos, "", new { @class = "text-danger" })
						</div>
					</div>

					<br />
					<div class="form-group">
						@Html.LabelFor(model => model.Estatus, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.DropDownList("Estatus", (IEnumerable<SelectListItem>)ViewBag.dropdownEstatus, new { @id = "idEstatus", @class = "form-control" })
						</div>
					</div>

					@Html.HiddenFor(model => model.id_Rango, new { htmlAttributes = new { @class = "form-control" } })
					@Html.HiddenFor(model => model.UltModUsuario, new { htmlAttributes = new { @class = "form-control" } })
					@Html.HiddenFor(model => model.UltMod_F, new { htmlAttributes = new { @class = "form-control" } })
					@Html.HiddenFor(model => model.CreadoUsuario, new { htmlAttributes = new { @class = "form-control" } })
					@Html.HiddenFor(model => model.Creado_F, new { htmlAttributes = new { @class = "form-control" } })


					<br />
					<p>
						@*<input type="submit" value="Grabar" class="btn btn-default" style="height:25Px; text-align:inherit" />*@
						<input type="submit" value="Modificar Productos" class="btn btn-default" style="height:25Px; text-align:inherit" />
						@Html.ActionLink("Regresar", "Index", "CO_tb_Rango_Compra_Premios", null, new { @class = "btn btn-default btn-lg", @style = "display:inline" })
					</p>
					
				</div>
			</form>
		}



	</div>
   



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

