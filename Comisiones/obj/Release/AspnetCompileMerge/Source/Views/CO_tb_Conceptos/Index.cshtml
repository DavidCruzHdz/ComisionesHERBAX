@model IEnumerable<Comisiones.Models.CO_tb_Conceptos>

@{
	ViewBag.Title = "Altas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="maintitle">Listado de Conceptos</div>


<div class="container-fluid" id="divMainContainer">
	@Html.AntiForgeryToken()
	<p>
		@Html.ActionLink("Agregar nueva", "Create", "CO_tb_Conceptos", null, new { @class = "btn btn-default btn-lg", @style = "display:inline" })
		@Html.AntiForgeryToken()
	</p>


	<script type="text/javascript" class="init">
		$(document).ready(function () {
			var table = $('#tblCompaniaPago').DataTable({

				language: {
					"decimal": "",
					"emptyTable": "No hay información",
					"info": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
					"infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
					"infoFiltered": "(Filtrado de _MAX_ total entradas)",
					"infoPostFix": "",
					"thousands": ",",
					"lengthMenu": "Mostrar _MENU_ registros",
					"loadingRecords": "Cargando...",
					"processing": "Procesando...",
					"search": "Buscar:",
					"zeroRecords": "Ningún dato disponible en esta tabla",
					"paginate": {
						"first": "Primero",
						"last": "Ultimo",
						"next": "Siguiente",
						"previous": "Anterior"
					}
				}
			}
			);


		});
	</script>


	<div class="col-lg-12" id="divPageQueryLists">
		<table id="tblCompaniaPago" class="table display table-striped table-bordered dt-responsive nowrap" style="width:100%">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.descripcion)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.tipo)						
					</th>
					<th>
						@Html.DisplayNameFor(model => model.gravable)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.pagoEspecie)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.estatus)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.usuario)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.fechaMovimiento)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.descripcion)
						</td>
						<td>
							@*@Html.DisplayFor(modelItem => item.tipo)*@
							@{
								if (item.tipo != "D")
								{
									<span>Percepcion</span>
								}
								else
								{
									<span>Deduccion</span>
								}
							}
						</td>
						<td>
							@*@Html.DisplayFor(modelItem => item.gravable)*@
							@if (item.gravable != 0)
							{
							<span>Si</span>
							}
							else
							{
							<span>No</span>
							}
						</td>
						<td>
							@*@Html.DisplayFor(modelItem => item.pagoEspecie)*@
							@if (item.pagoEspecie != 0)
							{
								<span>Si</span>
							}
							else
							{
								<span>No</span>
							}
						</td>
						<td>
							@*@Html.DisplayFor(modelItem => item.estatus)*@
							@if (item.estatus != 0)
							{
								<span>Activo</span>
							}
							else
							{
								<span>Inactivo</span>
							}
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.usuario)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.fechaMovimiento)
						</td>
						<td>
							@Html.ActionLink("Modificar", "Edit", new { id = item.id_Concepto }) |
							@Html.ActionLink("Consultar", "Details", new { id = item.id_Concepto }) |
							@Html.ActionLink("Borrar", "Delete", new { id = item.id_Concepto })
						</td>
					</tr>
				}
			</tbody>

		</table>
	</div>
</div>

