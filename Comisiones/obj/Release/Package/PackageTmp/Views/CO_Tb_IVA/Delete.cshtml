@model Comisiones.Models.CO_Tb_IVA

@{
	ViewBag.Title = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 jumbotron" style="color:#000000; font:caption; background-color:azure;">
	<h2>Borrar esta compañia</h2>

	@Html.AntiForgeryToken()
	<h6>Esta seguro que desea borrar los datos de esta compañia?</h6>
	<div>
		<div>
			<h2>Informacion de Impuestos</h2>
			<hr />
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(model => model.id_pais)
				</dt>

				<dd>
					@Html.HiddenFor(model => model.id_pais)
					@Html.DropDownList("id_pais", (IEnumerable<SelectListItem>)ViewBag.dropdownPaises, "Selecciona un Pais?", new { @id = "IdPais", @disabled = "disabled" })

				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.id_regimen)
				</dt>

				<dd>
					@*@Html.HiddenFor(model => model.id_regimen)*@
					@Html.DropDownList("id_regimen", (IEnumerable<SelectListItem>)ViewBag.dropdownRegimen, "Cual es Regimen Fiscal?", new { @id = "IdRegimen", @class = "form-control", @disabled = "disabled" })
				</dd>


				<dd>
					@Html.DisplayFor(model => model.id_regimen)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.iva)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.iva)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.fecha_ult_modificacion)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.fecha_ult_modificacion)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.usuario_ult_modificacion)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.usuario_ult_modificacion)
				</dd>

			</dl>

			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()

				<div class="form-actions no-color">
					<input type="submit" value="Aceptar" class="btn btn-default" />
					@Html.ActionLink("Regresar", "Index", "CO_Tb_IVA", null, new { @class = "btn btn-default btn-lg", @style = "display:inline" })
				</div>
			}
		</div>


	</div>

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#IdPais").attr('readonly', true);
	    $("#IdRegimen").attr('readonly', true);
	});
</script>