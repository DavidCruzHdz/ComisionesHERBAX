								@Html.HiddenFor(x => x[i].Descripcion, new { @class = "form-control", @style = "align-items:right", @disabled = "disabled" })
								@Html.HiddenFor(x => x[i].SubTotal, new { @class = "form-control Monto", @style = "align-items:right", @disabled = "disabled" })


