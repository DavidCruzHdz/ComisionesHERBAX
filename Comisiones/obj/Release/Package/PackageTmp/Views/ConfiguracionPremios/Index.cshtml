                                    window.onload = function ()
                                    {

                                        if (@ViewBag.IsOk == 1)
                                        {
                                            Swal.fire("@ViewBag.Message", 'Presione el boton para cerrar!', 'success');

                                        }
                                        else
                                        {
                                            Swal.fire({
                                                title: '@ViewBag.Message',
                                                text: "Presione el boton para cerrar!",
                                                type: "error",

                                                animation: false,
                                                customClass:
                                                      {
                                                          popup: 'animated tada'
                                                      }
                                            }).then(function (result)
                                            {
                                                window.location.hostname;
                                            })

                                        }


                                    };
					</script>
