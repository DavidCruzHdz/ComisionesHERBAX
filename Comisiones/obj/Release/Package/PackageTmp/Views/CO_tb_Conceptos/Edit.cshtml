@model Comisiones.Models.CO_tb_Conceptos

@{

	ViewBag.Title = "Modificaciones";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 jumbotron" style="color:#000000; font:caption; background-color:azure;">
	<h2>Modificar datos</h2>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<h4>Cambios a la informacion</h4>
		<hr />
		<div class="form-horizontal">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.id_Concepto)

			<div class="form-group">
				@Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.tipo, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
                    @Html.DropDownList("tipo", (IEnumerable<SelectListItem>)ViewBag.dropdownTipo, "", new { @id = "CmbTipo", @class = "form-control" })										
				</div>
			</div>


            <div class="form-group">
                @Html.LabelFor(model => model.gravable, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("gravable", (IEnumerable<SelectListItem>)ViewBag.dropdownGravable, "", new { @id = "CmbGrabable", @class = "form-control" })
                </div>
            </div>


            @*<div class="form-group">
                @Html.LabelFor(model => model.gravable, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("gravable", (IEnumerable<SelectListItem>)ViewBag.dropdownGravable, "", new { @id = "CmbGrabable", @class = "form-control" })
                </div>
            </div>*@



            <div class="form-group">
                @Html.LabelFor(model => model.pagoEspecie, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("pagoEspecie", (IEnumerable<SelectListItem>)ViewBag.dropdownpagoEspecie, "", new { @id = "CmbGrabable", @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.estatus, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Estatus", (IEnumerable<SelectListItem>)ViewBag.dropdownEstatus, "", new { @id = "CmbGrabable", @class = "form-control" })
                </div>
            </div>

			
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Grabar" class="btn btn-default" style="height:25Px; text-align:inherit" />
					@Html.ActionLink("Regresar", "Index", "CO_tb_Conceptos", null, new { @class = "btn btn-default btn-lg", @style = "display:inline" })
				</div>
			</div>
		</div>
	}
</div>

